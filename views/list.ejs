<%- include("partials/header") -%>

  <div class="box" id="heading">
    <h2> <%= listTitle%></h2>
    <h3>Created By - <%= gameCode%></h3> 
    <h3><%= day%></h3>
  </div>

  <div class="box">
    <% for (let i=0; i<newListItems.length; i++) { %>
      <form action="/deleteItem" method="post">
        <div class="item" >
            <input name="checkBox" type="checkbox" onChange = "this.form.submit()" value="<%= newListItems[i]._id %>" >
            <p><%=  newListItems[i].item  %></p>
        </div>
        <div>
          <input type = "hidden" name="username" value = <%= listTitle %> > </input>
          <input type = "hidden" name="code" value = <%= gameCode %> > </input>
        </div>
      </form>
    <% } %>
      <form class="item" action="/addItem" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <input type = "hidden" name="code" value = <%= gameCode %> > </input>
        <button type="submit" name="list" value= <%= listTitle %> >+</button>
      </form>
  </div>

  <div class= "box">
    <form action="/lists" method="get">
        <button class = "button">Back</button>
    </form>
  </div>
<%- include("partials/footer") -%>
